.post-list
  .post
    .post-title
      &::before
        content: "✏️"
    .post-date
      //list-style-type none
      padding-left 0
      li
        display inline-block
        margin-right 1.2rem
        padding-left -0.5rem
        &:nth-child(1)::before
          content "🕰"
          position relative
          left 4px
        &:nth-child(2)::before
          content "👨‍💻‍"
          position relative
          left 4px
    .more-link
      color #2bbc8a
      background-image: none
      border-bottom: 1px solid #2bbc8a
  .pagination
    padding-left 0
    text-align: center